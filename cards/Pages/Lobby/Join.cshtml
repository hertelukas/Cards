@page "{id:int=-1}"
@model JoinModel

@{
    ViewData["Title"] = "Join";
}

<form asp-page="Lobby/Join">
    <div class="form-floating">
        @if (Model.Id >= 0)
        {
            <input asp-for="Input.Id" class="form-control" aria-required="true" value="@Model.Id">
        }
        else
        {
            <input asp-for="Input.Id" class="form-control" aria-required="true">
        }
        <label asp-for="Input.Id" class="form-label"></label>
        <span asp-validation-for="Input.Id" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" aria-required="true">
        <label asp-for="Input.Password" class="form-label"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Join</button>
    </div>
</form>